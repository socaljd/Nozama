<% provide(:title, 'Inventory') %>
<h1>Inventory</h1>
<div class = 'text-center'>
    <%= will_paginate %>
</div>
<table align="center" class="center hero-unit">
  <thead>
  <tr>
    <th>FNSKU</th>
    <td>&nbsp&nbsp</td>
    <th>Received Date</th>
    <td>&nbsp&nbsp</td>
    <th>Days In Inventory</th>
    <td>&nbsp&nbsp</td>
    <th>Received</th>
    <td>&nbsp&nbsp</td>
    <th>Remaining</th>
    <td>&nbsp&nbsp</td>
    <th>Product Name</th>
    <td>&nbsp&nbsp</td>

    <th>Delete</th>
  </tr>
  </thead>

  <tbody>
  <% @inventories.each do |inventory| %>
      <tr>
        <td><%= link_to inventory.fnsku, inventory %></td>
        <td>&nbsp&nbsp</td>
        <td><%= inventory.received_date.strftime('%m/%d/%Y') %></td>
        <td>&nbsp&nbsp</td>
        <td><%= (Date.today - inventory.received_date).to_i %></td>
        <td>&nbsp&nbsp</td>
        <td><%= inventory.quantity %></td>
        <td>&nbsp&nbsp</td>
        <td><%= inventory.quantity_remaining %></td>
        <td>&nbsp&nbsp</td>
        <td><%= link_to inventory.product_name, inventory %></td>
        <td>&nbsp&nbsp</td>
        <td><%= link_to 'Delete', inventory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<div class='text-center'>
    <%= will_paginate %>
</div>