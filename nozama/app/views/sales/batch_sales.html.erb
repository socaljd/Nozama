<% provide(:title, 'Batch Sales') %>
<h1>Batch Sales</h1>
<div class='text-center'>
    <%= will_paginate %>
</div>
<table align="center">
    <thead>
    <tr>
        <th>Amazon Order ID</th>
        <td>&nbsp&nbsp</td>
        <th>FNSKU</th>
        <td>&nbsp&nbsp</td>
        <th>Shipment Date</th>
        <td>&nbsp&nbsp</td>
        <th>Delete</th>
    </tr>
    </thead>

    <tbody>
    <% @sales.each do |sale| %>
        <tr>
            <td><%= link_to sale.amazon_order_id, sale %></td>
            <td>&nbsp&nbsp</td>
            <td><%= sale.fnsku %></td>
            <td>&nbsp&nbsp</td>
            <td><%= sale.shipment_date.strftime('%m/%d/%Y') %></td>
            <td>&nbsp&nbsp</td>
            <td><%= link_to 'Delete', batchsalesdeleteone_path(:id => sale.id, :batch_id => sale.batch_id), data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
    </tbody>
</table>
<div class='text-center'>
    <%= will_paginate %>
</div>