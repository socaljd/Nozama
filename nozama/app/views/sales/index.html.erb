<% provide(:title, 'Sales') %>
<h1>Sales</h1>
<div class='text-center'>
    <%= will_paginate %>
</div>
<table align="center" class="center hero-unit">
  <thead>
  <tr>
    <th>FNSKU</th>
    <td>&nbsp&nbsp</td>
    <th>Shipment Date</th>
    <td>&nbsp&nbsp</td>

    <th>Days in Inventory</th>
    <td>&nbsp&nbsp</td>
    <th>Price</th>
    <td>&nbsp&nbsp</td>
    <th>Amazon Order ID</th>
    <td>&nbsp&nbsp</td>
    <th>Delete</th>
  </tr>
  </thead>

  <tbody>
  <% @sales.each do |sale| %>
      <tr>
        <td><%= link_to sale.fnsku, sale %></td>
        <td>&nbsp&nbsp</td>
        <td><%= sale.shipment_date.strftime('%m/%d/%Y') %></td>
        <td>&nbsp&nbsp</td>
        <td><%= sale.days_in_inventory.abs %></td>
        <td>&nbsp&nbsp</td>
        <td><%= number_to_currency(sale.item_price_per_unit) %></td>
        <td>&nbsp&nbsp</td>
        <td><%= link_to sale.amazon_order_id, sale %></td>
        <td>&nbsp&nbsp</td>
        <td><%= link_to 'Delete', sale, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<div class='text-center'>
    <%= will_paginate %>
</div>